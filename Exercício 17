#include <stdio.h>

int main(){
    float r;
    printf("Digite o raio do círculo:\n");
    scanf("%f", &r);

    float d, c, a;
    d = 2*r;
    c = 2*3.14159*r;
    a = 3.14159*(r*r);

    printf("Diâmetro: %.2f\n", d);
    printf("Circunferência: %.2f\n", c);
    printf("Área: %.2f\n", a);

    return 0;
}
