#include <stdio.h>

int main(){
    puts("Vamos verificar se um número é múltiplo de outro.");
    
    int x, y;
    printf("Digite dois números inteiros:\n");
    scanf("%d %d", &x, &y);

    (x%y)?puts("O primeiro NÃO é múltiplo do segundo."):puts("O primeiro é múltiplo do segundo.");
    
    return 0;
}
