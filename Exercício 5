#include <stdio.h>

int main(){
    float x;
    printf("Digite a sua altura em metros: \n");
    scanf("%f", &x);

    char y;
    printf("Digite o seu gênero (M ou F): \n");
    scanf(" %c", &y);

    if (y == 'M'){
    printf("Peso ideal: %.2f\n", 72.7*x - 58);
    }
    else if (y == 'F'){
    printf("Peso ideal: %.2f\n", 62.1*x - 44.7);
    }
    else{
        printf("Insira o gênero corretamente. \n");
    }
    
    return 0;
}
